// Production schema - use PostgreSQL
// Copy this to schema.prisma after setting up PostgreSQL

generator client {
  provider      = "prisma-client"
  output        = "../lib/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"  // Changed from sqlite for production
  url      = env("DATABASE_URL")
}

model Log {
  id          String   @id @default(cuid())
  prompt      String
  response    String?
  timestamp   DateTime @default(now())
  hasPII      Boolean  @default(false)
  hasInjection Boolean @default(false)
  piiTypes    String?  // JSON array of detected PII types
  riskScore   Float    @default(0)
  blocked     Boolean  @default(false)
  metadata    String?  // JSON for additional metadata
}

model Policy {
  id          String   @id @default(cuid())
  name        String
  description String?
  enabled     Boolean  @default(true)
  rules       String   // JSON array of detection rules
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

